<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.a123fahrschule.dahsedprogressbar.MainActivity">

    <de.a123fahrschule.dashedprogressbar.DashedProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Hello World!"
        app:emptyProgressBarColor="@android:color/darker_gray"
        app:emptyProgressBarLength="4dp"
        app:emptyProgressBarSpacing="4dp"
        app:emptyProgressBarWidth="4dp"
        app:endAngle="315"
        app:filledProgressBarColor="@android:color/holo_orange_dark"
        app:filledProgressBarLength="8dp"
        app:filledProgressBarSpacing="2dp"
        app:filledProgressBarWidth="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:startAngle="225"
        app:direction="clockwise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
